# Environment name (dev, staging, prod)
environment = "dev"

# AWS region for resources
region = "ap-northeast-1"

# Lambda environment variables (optional additions beyond defaults)
lambda_additional_environment = {}

# Optional: Configure front-end hosting (CloudFront + S3). Leave commented to skip.
# web_domain         = "example.com"
# web_subdomain      = "chainy"
# web_hosted_zone_id = "Z1234567890ABCDEFG" # Route 53 hosted zone ID for the domain
# web_price_class    = "PriceClass_100"

# SSM parameter names for hashing salts
hash_salt_parameter_name    = "/chainy/dev/hash-salt"
ip_hash_salt_parameter_name = "/chainy/dev/ip-hash-salt"

# Fallback values for SSM parameters (used if SSM fails)
hash_salt_fallback    = "fallback-hash-salt-change-me"
ip_hash_salt_fallback = "fallback-ip-salt-change-me"

# Optional: Override build directories
# redirect_build_dir = "dist/redirect"
# create_build_dir  = "dist/create"

# Optional: Additional tags for all resources
extra_tags = {
  Project     = "chainy"
  Environment = "dev"
  ManagedBy   = "terraform"
}
